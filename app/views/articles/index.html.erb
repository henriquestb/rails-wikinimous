  <h1>Wikizuka</h1>
  <h1><%= link_to "Add a new task", new_article_path %></h1>
</div>

<h2>My articles</h2>
<% @articles.each do |article| %>
  <div class="align">
    <h4><%= link_to article.title, article_path(article) %></h4>
    <h5><%= article.content %></h5>
  </div>
  <%= link_to article_path(article), method: :delete do  %>
      <i class="fas fa-trash"></i>
    <% end %>
<% end %>
<h5><%= link_to "Add a new article", new_article_path %></h5>
